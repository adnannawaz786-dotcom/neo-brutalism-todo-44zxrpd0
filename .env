# Environment Variables for Neo-Brutalism Todo App

# Application Configuration
VITE_APP_NAME=Neo-Brutalism Todo
VITE_APP_VERSION=1.0.0

# Development Configuration
VITE_DEV_MODE=true
VITE_LOG_LEVEL=info

# Animation Configuration
VITE_ANIMATION_DURATION=300
VITE_FRAMER_MOTION_DEBUG=false

# Theme Configuration
VITE_DEFAULT_THEME=dark
VITE_ENABLE_THEME_SWITCHING=true

# Local Storage Keys
VITE_TODOS_STORAGE_KEY=neo-brutalism-todos
VITE_THEME_STORAGE_KEY=neo-brutalism-theme
VITE_USER_PREFERENCES_KEY=neo-brutalism-preferences

# Feature Flags
VITE_ENABLE_DRAG_DROP=true
VITE_ENABLE_CATEGORIES=true
VITE_ENABLE_DUE_DATES=true
VITE_ENABLE_PRIORITY_LEVELS=true

# Performance Configuration
VITE_MAX_TODOS=1000
VITE_DEBOUNCE_DELAY=300
VITE_AUTO_SAVE_INTERVAL=5000

# UI Configuration
VITE_MAX_TODO_LENGTH=500
VITE_TOAST_DURATION=3000
VITE_ANIMATION_REDUCED_MOTION=false